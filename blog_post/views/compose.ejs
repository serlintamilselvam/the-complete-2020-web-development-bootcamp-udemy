<%- include('partials/header') %>
    <h1>Compose</h1>
    <form action="/" method="POST">
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" id="postTitle" class="form-control" name="postTitle" required>
        </div>
        <div class="form-group">
            <label for="postContent">Post</label>
            <textarea id="postContent" name="postContent" class="form-control" required cols="30" rows="7"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" name="publish">Publish</button>
    </form>
<%- include('partials/footer') %>